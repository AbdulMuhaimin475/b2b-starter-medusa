{
  "name": "my-monorepo",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "build-packages",
    "build-packages": "turbo run build --filter ./packages/*",
    "build-apps": "turbo run build --filter ./apps/*",
    "start": "turbo run start",
    "lint": "turbo run lint"
  },
  "packageManager": "yarn@4.5.0",
  "devDependencies": {
    "turbo": "latest"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
